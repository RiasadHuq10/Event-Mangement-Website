<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>All Events</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <style>
    .cardcontainer {
      display: flex;
      justify-content: center;
      margin-left: 0px;
      margin-right: 0px;
      flex-direction: row;
      flex-wrap: wrap;
    }
  </style>
</head>

<body>


  <nav class="navbar navbar-expand-lg bg-body-tertiary" method="GET">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/Home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/events">Events</a>
          </li>
          <li class="nav-item">

            <a class="nav-link" href="/displayVolunteer">Become volunteer</a>


        </ul>
      </div>
    </div>
  </nav>





  

  <div class="row my-4" style="margin: 20px;">

    <div class="col-6">

    <nav aria-label="breadcrumb ">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/Home">Home</a></li>
          
          <li class="breadcrumb-item active" aria-current="page">Events</li>
        </ol>
      </nav>
    </div>
    
    <form class="col-6 text-end" action='/newevent' method="get">

        <button type="submit" class="btn btn-primary"
            style="background-color: blue;margin-top: 5px; ">
            New
        </button>
    </form>


</div>

  <div class="row .container " style="margin: 30px;">

    <% for (var event of events) { %>

      <div class="card col-12 col-md-12 col-lg-4" style="margin-top: 5px;">
        <a href='/event/<%= event._id %>'><img src="<%= event.image %>" class="card-img-top"
            onError="this.onerror=null;this.src='cardimg.png';" style="object-fit:fill;height: 300px;"></a>
        <div class="card-body">
          <h5 class="card-title">
            <%= event.event %>
          </h5>
          <p class="card-text">
            <%= event.description %>
          </p>

          <div>
            <form class="text-end" action='/event/editEvent/<%= event._id %>' method="get">
              <button type="submit" class="btn btn-primary" style="align-self:flex-end; background-color: blue; ">
                Edit
              </button>
            </form>
          </div>
        </div>

      </div>



      <% } %>

        <nav aria-label="Page navigation example" style="margin-top: 10px;">
          <ul class="pagination">



            <% for (let i=1; i <=Math.ceil(total / perPage); i++) { %>
              <% if(i===page) { %>
                <li class="page-item"><a class="page-link" style="background-color: blanchedalmond; color: black;">
                    <%= i %>
                  </a></li>

                <% } else { %>
                  <li class="page-item"><a class="page-link" href="/events?page=<%= i %>&perPage=<%= perPage %>">
                      <%= i %>
                    </a></li>

                  <% } %>
                    <% } %>



                      </li>
          </ul>
        </nav>



  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>




</body>